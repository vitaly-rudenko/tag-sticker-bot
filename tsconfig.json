{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": ["src/**/*.js", "src/aws/lambdas/init/index.mjs", "src/aws/lambdas/rest-api/index.mjs"],
  "exclude": ["node_modules"]
}
