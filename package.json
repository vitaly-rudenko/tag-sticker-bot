{
  "name": "tag-sticker-bot",
  "version": "2.1.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env --experimental-strip-types src/app.ts",
    "dev": "nodemon --exec 'npm start'",
    "test": "npm run jest",
    "jest": "node --env-file=.env --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "tsc",
    "umzug": "node --env-file=.env ./src/umzug/cli.js",
    "build": "rimraf dist && rollup -c && npm install --cpu=x64 --os=linux --prefix ./dist/rest-api sharp@0.33.2"
  },
  "author": "Vitaly Rudenko",
  "license": "ISC",
  "dependencies": {
    "markdown-escapes": "^2.0.1",
    "pg": "^8.13.3",
    "sharp": "^0.33.2",
    "telegraf": "^4.16.3",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "rimraf": "^5.0.5",
    "tsc": "^2.0.4",
    "typescript": "^5.8.2"
  },
  "nodemonConfig": {
    "watch": [
      "./src",
      "./package-lock.json",
      "./.env"
    ],
    "delay": 500,
    "ext": "js,mjs,json,env"
  }
}
