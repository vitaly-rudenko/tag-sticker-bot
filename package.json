{
  "name": "tag-sticker-bot",
  "version": "1.3.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env.local src/app.js",
    "dev": "nodemon --exec 'npm start'",
    "setup-local": "node --env-file=.env.local src/scripts/setup-local.js",
    "test": "npm run setup-local && npm run jest",
    "jest": "node --env-file=.env.local --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "tsc",
    "build-lambdas": "rimraf dist && rollup -c",
    "deploy:dev": "npm run build-lambdas && node --env-file=.env.dev ./node_modules/.bin/cdk deploy",
    "undeploy:dev": "node --env-file=.env.dev ./node_modules/.bin/cdk destroy",
    "deploy:prod": "npm run build-lambdas && node --env-file=.env.prod ./node_modules/.bin/cdk deploy"
  },
  "author": "Vitaly Rudenko",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.454.0",
    "markdown-escapes": "^2.0.1",
    "telegraf": "^4.15.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jest": "^29.5.8",
    "aws-cdk": "^2.110.0",
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0",
    "jest": "^29.4.3",
    "jest-extended": "^3.2.4",
    "nodemon": "^2.0.20",
    "rimraf": "^5.0.5",
    "rollup": "^4.4.1",
    "typescript": "^5.2.2"
  },
  "nodemonConfig": {
    "watch": [
      "./src",
      "./package-lock.json",
      "./.env"
    ],
    "delay": 500,
    "ext": "js,mjs,json,env"
  }
}
