{
  "name": "tag-sticker-bot",
  "version": "3.1.0",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env --experimental-strip-types src/app.ts | pino-pretty",
    "dev": "nodemon --exec 'npm start'",
    "test": "node --env-file=.env --experimental-strip-types --test",
    "lint": "tsc",
    "umzug": "node --env-file=.env --experimental-strip-types ./src/umzug/cli.ts",
    "umzug:test": "node --env-file=.env.test --experimental-strip-types ./src/umzug/cli.ts",
    "script:populate": "node --experimental-strip-types --env-file=.env scripts/populate.mjs"
  },
  "author": "Vitaly Rudenko",
  "license": "ISC",
  "dependencies": {
    "markdown-escapes": "^2.0.1",
    "pg": "^8.13.3",
    "pino": "^9.6.0",
    "pino-abstract-transport": "^2.0.0",
    "pino-pretty": "^13.0.0",
    "telegraf": "^4.16.3",
    "umzug": "^3.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "csv-parse": "^5.6.0",
    "nodemon": "^2.0.20",
    "tsc": "^2.0.4",
    "typescript": "^5.8.2"
  },
  "nodemonConfig": {
    "watch": [
      "./src",
      "./package-lock.json",
      "./.env"
    ],
    "delay": 500,
    "ext": "ts,json,env"
  }
}
